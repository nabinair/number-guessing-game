    "import random\n",
    "import time\n",
    "\n",
    "name = input(\"Enter your full name: \")\n",
    "rounds = int(input(\"How many time you want to play the game: \"))\n",
    "\n",
    "for i in range(rounds):\n",
    "    print( \"I want to play\" , i+1 , \"of\" , rounds)\n",
    "    number = round(random.uniform(1,5) , 2 )\n",
    "    while True:\n",
    "        guess = float(input(\"guess a number between 1 to 5:\"))\n",
    "        if guess > 5 or guess < 0:\n",
    "            print(\"Dude, enter number from 1 to 5\")\n",
    "        else:\n",
    "            break\n",
    "\n",
    "    if guess == number:\n",
    "        print(number)\n",
    "    else:\n",
    "        print(\"Error, try guessing more\")\n",
    "        print(\"the random number is\" , number)\n",
    "        time.sleep(5)\n",
    "\n",
    "print(\"Thank you\" , name , \"for playing the game\")"
   ]
